<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dsp.sjk.nanny.MainActivity">

    <Button
            android:id="@+id/btn_detector" android:text="@string/btn_detector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_client"
            app:layout_constraintVertical_bias="0.19" android:layout_marginStart="160dp"
            app:layout_constraintLeft_toLeftOf="parent" android:onClick="detectorClick"/>

    <Button
            android:id="@+id/btn_client" android:text="@string/btn_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            app:layout_constraintTop_toBottomOf="@+id/btn_detector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" android:layout_marginBottom="160dp"
            android:layout_marginStart="160dp" app:layout_constraintLeft_toLeftOf="parent"
            android:onClick="clientClick"/>

</android.support.constraint.ConstraintLayout>
